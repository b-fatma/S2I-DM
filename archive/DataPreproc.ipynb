"""
save_soil_to_netcdf.py

Utilities to export a clipped HWSD raster and the joined soil attribute DataFrame
into NetCDF files (using xarray / netCDF4). Designed to work with variables:
- img: numpy array from rasterio read (shape: bands, height, width), e.g. img from clip_instance
- meta: rasterio meta dictionary (must include 'transform' Affine)
- soil_df: pandas DataFrame with a key column 'HWSD2_SMU_ID' and soil attributes

Functions:
- raster_to_netcdf(img, meta, out_path, var_name='SMU_ID')
- soil_df_to_netcdf(img, meta, soil_df, out_path, id_col='HWSD2_SMU_ID', vars=None)
- save_all_to_netcdf(img, meta, soil_df, raster_path, attributes_path, ...)
"""
from typing import Optional, Sequence, Dict, Any
import numpy as np
import pandas as pd
import xarray as xr
import rasterio
import json
import os


def _coords_from_meta(meta: Dict[str, Any]):
    """
    Build 1D x and y coordinates (pixel centers) from rasterio meta['transform'] and raster shape.
    Returns (y_coords, x_coords) as 1D numpy arrays.
    """
    transform = meta["transform"]
    # raster dims
    if "height" in meta and "width" in meta:
        h = int(meta["height"])
        w = int(meta["width"])
    else:
        raise ValueError("meta must contain integer 'height' and 'width' keys")

    # use rasterio.transform.xy in list comprehensions to get pixel center coords
    x_coords = np.array([rasterio.transform.xy(transform, 0, c, offset="center")[0] for c in range(w)])
    y_coords = np.array([rasterio.transform.xy(transform, r, 0, offset="center")[1] for r in range(h)])

    return y_coords, x_coords


def raster_to_netcdf(img: np.ndarray, meta: Dict[str, Any], out_path: str, var_name: str = "SMU_ID"):
    """
    Save a single-band raster array (img) to NetCDF.

    Parameters:
    - img: numpy array with shape (bands, height, width) or (height, width).
    - meta: rasterio meta dict including 'transform', 'height', 'width', 'crs'
    - out_path: output NetCDF file path
    - var_name: variable name to use inside NetCDF
    """
    # normalize img to 2D if needed
    if img.ndim == 3 and img.shape[0] == 1:
        arr = img[0]
    elif img.ndim == 2:
        arr = img
    else:
        # if multi-band, take first band by default
        arr = img[0]

    y_coords, x_coords = _coords_from_meta(meta)

    da = xr.DataArray(
        arr,
        dims=("y", "x"),
        coords={"y": y_coords, "x": x_coords},
        attrs={
            "crs": str(meta.get("crs", "")),
            "transform": json.dumps([float(v) for v in meta["transform"]]) if "transform" in meta else ""
        },
        name=var_name
    )

    ds = da.to_dataset()

    encoding = {var_name: {"zlib": True, "complevel": 4, "dtype": arr.dtype}}
    os.makedirs(os.path.dirname(out_path) or ".", exist_ok=True)
    ds.to_netcdf(out_path, engine="netcdf4", encoding=encoding)


def soil_df_to_netcdf(
    img: np.ndarray,
    meta: Dict[str, Any],
    soil_df: pd.DataFrame,
    out_path: str,
    id_col: str = "HWSD2_SMU_ID",
    vars: Optional[Sequence[str]] = None,
):
    """
    Map soil_df attributes onto the raster grid (using SMU ids present in the raster) and save as a NetCDF Dataset.
    Non-numeric categorical columns are saved as integer codes; category mapping is preserved in variable attributes.

    Parameters:
    - img: numpy array with shape (bands, height, width) or (height, width) containing SMU ids
    - meta: rasterio meta dict including 'transform', 'height', 'width', 'crs'
    - soil_df: pandas DataFrame indexed or containing id_col for SMU ids
    - out_path: output NetCDF file path
    - id_col: name of the column in soil_df that contains SMU id integer matching raster values
    - vars: optional list of columns from soil_df to export (defaults to all except id_col)
    """
    # normalize img to 2D
    if img.ndim == 3 and img.shape[0] == 1:
        smu_arr = img[0]
    elif img.ndim == 2:
        smu_arr = img
    else:
        smu_arr = img[0]

    h, w = smu_arr.shape
    flat_ids = smu_arr.ravel()

    if vars is None:
        vars = [c for c in soil_df.columns if c != id_col]

    # prepare xarray coords
    y_coords, x_coords = _coords_from_meta(meta)

    ds = xr.Dataset(
        coords={
            "y": ("y", y_coords),
            "x": ("x", x_coords),
        },
        attrs={"crs": str(meta.get("crs", ""))}
    )

    # set index for quick lookup
    lookup = soil_df.set_index(id_col)

    for col in vars:
        try:
            series = lookup[col]
        except KeyError:
            # skip missing columns gracefully
            continue

        if pd.api.types.is_numeric_dtype(series.dtype):
            mapped = pd.Series(flat_ids).map(series).values.reshape((h, w))
            data = np.asarray(mapped, dtype=series.dtype)
            encoding = {col: {"zlib": True, "complevel": 4, "dtype": data.dtype}}
            ds[col] = (("y", "x"), data)
            ds[col].attrs["original_dtype"] = str(series.dtype)

        else:
            # categorical/text: convert to codes and store mapping
            cat = pd.Categorical(series.astype(str))
            code_map = pd.Series(cat.codes, index=lookup.index)
            mapped_codes = pd.Series(flat_ids).map(code_map).fillna(-1).astype(int).values.reshape((h, w))
            ds[col] = (("y", "x"), mapped_codes)
            # store category mapping as JSON in attributes
            cat_mapping = {int(code): label for code, label in enumerate(cat.categories)}
            ds[col].attrs["category_mapping"] = json.dumps(cat_mapping)
            ds[col].attrs["missing_code"] = -1
            encoding = {col: {"zlib": True, "complevel": 4, "dtype": "i4"}}

        # apply encoding for this variable
        # accumulate encodings per variable
        if "encodings" not in locals():
            encodings = {}
        encodings[col] = encoding.get(col, encoding)

    # also include the original SMU id raster
    ds["SMU_ID"] = (("y", "x"), smu_arr.astype(np.int32))
    if 'encodings' not in locals():
        encodings = {}
    encodings["SMU_ID"] = {"zlib": True, "complevel": 4, "dtype": "i4"}

    os.makedirs(os.path.dirname(out_path) or ".", exist_ok=True)
    ds.to_netcdf(out_path, engine="netcdf4", encoding=encodings)


def save_all_to_netcdf(
    img: np.ndarray,
    meta: Dict[str, Any],
    soil_df: pd.DataFrame,
    raster_out: str,
    attributes_out: str,
    id_col: str = "HWSD2_SMU_ID",
    vars: Optional[Sequence[str]] = None,
):
    """
    Convenience wrapper to save both the raw SMU raster and the mapped soil attributes to NetCDF files.
    """
    raster_to_netcdf(img, meta, raster_out, var_name="SMU_ID")
    soil_df_to_netcdf(img, meta, soil_df, attributes_out, id_col=id_col, vars=vars)


